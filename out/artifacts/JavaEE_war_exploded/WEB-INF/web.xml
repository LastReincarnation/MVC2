<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    //乱码过滤器
    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>Filter.Filter</filter-class>
        <init-param>
            <param-name>characterEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    //Cookie
    <servlet>
        <servlet-name>GetCookie</servlet-name>
        <servlet-class>cookie.GetCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCookie</servlet-name>
        <url-pattern>/GetCookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetCookie</servlet-name>
        <servlet-class>cookie.SetCookie</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>SetCookie</servlet-name>
    <url-pattern>/SetCookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowNewsList</servlet-name>
        <servlet-class>ShowNewsList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowNewsList</servlet-name>
        <url-pattern>/ShowNewsList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteNewsServlet</servlet-name>
        <servlet-class>DeleteNewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteNewsServlet</servlet-name>
        <url-pattern>/DeleteNewsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditNewsServlet</servlet-name>
        <servlet-class>EditNewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditNewsServlet</servlet-name>
        <url-pattern>/EditNewsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveNewsServlet</servlet-name>
        <servlet-class>SaveNewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveNewsServlet</servlet-name>
        <url-pattern>/SaveNewsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewNewsServlet</servlet-name>
        <servlet-class>ViewNewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewNewsServlet</servlet-name>
        <url-pattern>/ViewNewsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddNewsServlet</servlet-name>
        <servlet-class>AddNewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewsServlet</servlet-name>
        <url-pattern>/AddNewsServlet</url-pattern>
    </servlet-mapping>

    //配置Session
    <servlet>
        <servlet-name>GetSession</servlet-name>
        <servlet-class>session.GetSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetSession</servlet-name>
        <url-pattern>/GetSession</url-pattern>
    </servlet-mapping>
</web-app>